<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Thêm Khoa</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
</head>

<body>
    <div class="container mx-auto p-8">
        <div class="flex justify-center">
            <form action="/add-faculty?studentId=<%= studentId %>" me   thod="POST" class="w-full max-w-lg bg-white p-6 rounded-lg shadow-md">
                <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Thêm Khoa</h2>

                <!-- Mã Khoa -->
                <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="facultyId">Mã Khoa</label>
                    <input type="text" name="facultyId" required
                        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                        placeholder="Mã Khoa" />
                </div>

                <!-- Tên Khoa -->
                <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="facultyName">Tên Khoa</label>
                    <input type="text" name="facultyName" required
                        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                        placeholder="Tên Khoa" />
                </div>

                <!-- Nút Submit -->
                <div class="flex items-center justify-center">
                    <button type="submit"
                        class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded focus:outline-none focus:shadow-outline">
                        Gửi
                    </button>
                </div>
            </form>
        </div>
    </div>
</body>

</html>

<script>
    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.has('success')) {
        alert('Thêm khoa thành công!');
        window.location.href = '/faculty';
    } else if (urlParams.has('error')) {
        alert('Có lỗi xảy ra, vui lòng thử lại!');
    }
</script>